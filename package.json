{
  "name": "wazeechai",
  "version": "0.0.1",
  "description": "WazeechAI: A modern AI-powered PWA chat app.",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "build": "tsc && vite build",
    "build:github": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "start": "npm run dev",
    "start-remote": "vite --host"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.20.1",
    "@thepassle/app-tools": "^0.9.13",
    "highlight.js": "^11.11.1",
    "lit": "^3.3.0",
    "llama-api-client": "^0.1.2",
    "marked": "^16.0.0",
    "urlpattern-polyfill": "^10.1.0",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "vite-plugin-pwa": "^1.0.1"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
